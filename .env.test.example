# Test Environment Configuration
# Copy this file to .env.test and fill in your test values

# Next.js
NODE_ENV=test
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Supabase Test Instance
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key
TEST_SUPABASE_SERVICE_KEY=your-test-service-key
TEST_DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Use same as production or separate test instance
NEXT_PUBLIC_SUPABASE_URL=${TEST_SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${TEST_SUPABASE_ANON_KEY}

# Stripe Test Mode
TEST_STRIPE_SECRET_KEY=sk_test_...
TEST_STRIPE_WEBHOOK_SECRET=whsec_test_...
STRIPE_PRICE_ID_MONTHLY=price_test_monthly
STRIPE_PRICE_ID_ANNUAL=price_test_annual

# Mock API Keys (for testing)
OPENAI_API_KEY=test-key
ANTHROPIC_API_KEY=test-key

# Playwright Configuration
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3001
CLEANUP_TEST_DATABASE=true

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test123456!

# CI/CD Settings
CI=false
SKIP_ENV_VALIDATION=true